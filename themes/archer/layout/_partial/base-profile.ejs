<div class="profile">
    <img class="profile-avatar" src= <%- url_for(theme.avatar) %> >
    <div class="profile-name"><%- theme.author || config.author %></div>
    <% if(theme.signature && theme.signature.length !== 0) {%>
    <div class="profile-signature">
        <%= theme.signature %>
    </div>
    <% } %>
    <% if(theme.social) { %>
    <div class="profile-social">
        <%- partial('base-social') %>
    </div>
    <% } %>
    <% if(theme.friends.enable) { %>
        <div class="friends">
            <div>FRIENDS</div>
            <% for (name in theme.friends) { %>
                <% if(theme.friends[name]) { %>
                    <span>
                        <a href= <%- theme.friends[name] %> target="_black"><%- name %></a>
                    </span>
                <% } %>
            <% } %>
        </div>
    <% } %>
    <% if(theme.about.enable) { %>
        <div class="about-me">
            <a href = "<%- url_for("/about") %>" >ABOUT ME</a>
        </div>
    <% } %>
    <% if (theme.busuanzi) { %>
    <div class="about-me">
            <span id="busuanzi_container_site_pv" style="font-size: 0.9rem;color: #777;">
                <span class="iconfont-archer">&#xe602;</span>
                本站总访问量： <span id="busuanzi_value_site_pv"></span> 次
            </span>
    </div>
    <% } %>
</div>